{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "USettings",
  "type": "object",
  "properties": {
    "browser": {
      "default": {
        "chrome": null,
        "msedge": null
      },
      "allOf": [
        {
          "$ref": "#/definitions/Browser"
        }
      ]
    },
    "chkimg": {
      "default": {
        "save_ss": false
      },
      "allOf": [
        {
          "$ref": "#/definitions/Chkimg"
        }
      ]
    },
    "options": {
      "default": {
        "default_font": {
          "name": "Yu Gothic UI",
          "size": 15
        },
        "dlg_title": null,
        "explicit": false,
        "fix_balloon": false,
        "log_file": 1,
        "log_lines": 400,
        "log_path": null,
        "no_stop_hot_key": false,
        "opt_finally": false,
        "opt_public": false,
        "position": {
          "left": 0,
          "top": 0
        },
        "same_str": false,
        "short_circuit": true
      },
      "allOf": [
        {
          "$ref": "#/definitions/UOption"
        }
      ]
    },
    "schema": {
      "default": "",
      "readOnly": true,
      "type": "string"
    }
  },
  "definitions": {
    "Browser": {
      "type": "object",
      "properties": {
        "chrome": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "msedge": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Chkimg": {
      "type": "object",
      "properties": {
        "save_ss": {
          "default": false,
          "type": "boolean"
        }
      }
    },
    "DefaultFont": {
      "type": "object",
      "properties": {
        "name": {
          "default": "",
          "type": "string"
        },
        "size": {
          "default": 0,
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "UOption": {
      "type": "object",
      "properties": {
        "default_font": {
          "default": {
            "name": "Yu Gothic UI",
            "size": 15
          },
          "allOf": [
            {
              "$ref": "#/definitions/DefaultFont"
            }
          ]
        },
        "dlg_title": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "explicit": {
          "default": false,
          "type": "boolean"
        },
        "fix_balloon": {
          "default": false,
          "type": "boolean"
        },
        "log_file": {
          "default": 0,
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        },
        "log_lines": {
          "default": 0,
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        },
        "log_path": {
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "no_stop_hot_key": {
          "default": false,
          "type": "boolean"
        },
        "opt_finally": {
          "default": false,
          "type": "boolean"
        },
        "opt_public": {
          "default": false,
          "type": "boolean"
        },
        "position": {
          "default": {
            "left": 0,
            "top": 0
          },
          "allOf": [
            {
              "$ref": "#/definitions/UPosition"
            }
          ]
        },
        "same_str": {
          "default": false,
          "type": "boolean"
        },
        "short_circuit": {
          "default": false,
          "type": "boolean"
        }
      }
    },
    "UPosition": {
      "type": "object",
      "properties": {
        "left": {
          "default": 0,
          "type": "integer",
          "format": "int32"
        },
        "top": {
          "default": 0,
          "type": "integer",
          "format": "int32"
        }
      }
    }
  }
}