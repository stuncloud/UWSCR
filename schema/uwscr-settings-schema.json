{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "USettings",
  "type": "object",
  "properties": {
    "browser": {
      "description": "BrowserControl設定",
      "default": {
        "chrome": null,
        "msedge": null
      },
      "allOf": [
        {
          "$ref": "#/definitions/Browser"
        }
      ]
    },
    "chkimg": {
      "description": "chkimg設定",
      "default": {
        "save_ss": false
      },
      "allOf": [
        {
          "$ref": "#/definitions/Chkimg"
        }
      ]
    },
    "options": {
      "description": "OPTION設定",
      "default": {
        "default_font": {
          "name": "Yu Gothic UI",
          "size": 15
        },
        "dlg_title": null,
        "explicit": false,
        "fix_balloon": false,
        "log_file": 1,
        "log_lines": 400,
        "log_path": null,
        "no_stop_hot_key": false,
        "opt_finally": false,
        "opt_public": false,
        "position": {
          "left": 0,
          "top": 0
        },
        "same_str": false,
        "short_circuit": true
      },
      "allOf": [
        {
          "$ref": "#/definitions/UOption"
        }
      ]
    },
    "schema": {
      "description": "この設定ファイルのschemaファイルのパス",
      "default": "https://github.com/stuncloud/UWSCR/releases/download/0.4.0/uwscr-settings-schema.json",
      "readOnly": true,
      "type": "string"
    }
  },
  "definitions": {
    "Browser": {
      "type": "object",
      "properties": {
        "chrome": {
          "description": "Chromeのパス",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "msedge": {
          "description": "MSEdgeのパス",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "Chkimg": {
      "type": "object",
      "properties": {
        "save_ss": {
          "description": "chkimg()実行時の画面を保存するかどうか",
          "default": false,
          "type": "boolean"
        }
      }
    },
    "DefaultFont": {
      "type": "object",
      "properties": {
        "name": {
          "description": "フォント名",
          "default": "",
          "type": "string"
        },
        "size": {
          "description": "フォントサイズ",
          "default": 0,
          "type": "integer",
          "format": "int32"
        }
      }
    },
    "UOption": {
      "type": "object",
      "properties": {
        "default_font": {
          "description": "ダイアログなどのフォント",
          "default": {
            "name": "Yu Gothic UI",
            "size": 15
          },
          "allOf": [
            {
              "$ref": "#/definitions/DefaultFont"
            }
          ]
        },
        "dlg_title": {
          "description": "ダイアログタイトル",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "explicit": {
          "description": "変数宣言必須",
          "default": false,
          "type": "boolean"
        },
        "fix_balloon": {
          "description": "吹き出しを仮想デスクトップにも出すかどうか",
          "default": false,
          "type": "boolean"
        },
        "log_file": {
          "description": "ログファイルの出力有無など",
          "default": 0,
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        },
        "log_lines": {
          "description": "ログの行数",
          "default": 0,
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        },
        "log_path": {
          "description": "ログファイルの出力先",
          "default": null,
          "type": [
            "string",
            "null"
          ]
        },
        "no_stop_hot_key": {
          "description": "停止ホットキー無効",
          "default": false,
          "type": "boolean"
        },
        "opt_finally": {
          "description": "finally部を必ず実行する",
          "default": false,
          "type": "boolean"
        },
        "opt_public": {
          "description": "publicの重複定義を禁止",
          "default": false,
          "type": "boolean"
        },
        "position": {
          "description": "メインGUIの座標",
          "default": {
            "left": 0,
            "top": 0
          },
          "allOf": [
            {
              "$ref": "#/definitions/UPosition"
            }
          ]
        },
        "same_str": {
          "description": "大文字小文字を区別する",
          "default": false,
          "type": "boolean"
        },
        "short_circuit": {
          "description": "短絡評価の有無",
          "default": false,
          "type": "boolean"
        }
      }
    },
    "UPosition": {
      "type": "object",
      "properties": {
        "left": {
          "description": "x座標",
          "default": 0,
          "type": "integer",
          "format": "int32"
        },
        "top": {
          "description": "y座標",
          "default": 0,
          "type": "integer",
          "format": "int32"
        }
      }
    }
  }
}